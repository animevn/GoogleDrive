<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bnQuery"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:background="@drawable/button1"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="@string/query"
        android:textColor="#FFEBEE"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/bnLogout"
        app:layout_constraintEnd_toEndOf="@+id/bnLogout"
        app:layout_constraintStart_toStartOf="@+id/bnLogout"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bnLogout"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:background="@drawable/button1"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="@string/signout"
        android:textColor="#FFEBEE"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bnQuery" />

</androidx.constraintlayout.widget.ConstraintLayout>